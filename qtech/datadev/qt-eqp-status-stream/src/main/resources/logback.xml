<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- 定义日志文件存储路径 -->
    <property name="LOG_HOME" value="./logs"/>

    <!-- 定义应用名称 -->
    <property name="APP_NAME" value="qt-eqp-status-stream"/>

    <!-- 定义日志输出格式 -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 定义详细日志输出格式（包含类名、方法名、行号） -->
    <property name="DETAILED_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger.%method:%line - %msg%n"/>

    <!-- 控制台输出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 应用主日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 错误日志文件 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${DETAILED_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>60</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 调试日志文件 -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-debug.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${DETAILED_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-debug.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Flink相关日志配置 -->
    <logger name="org.apache.flink" level="INFO"/>
    <logger name="org.apache.kafka" level="WARN"/>

    <!-- 数据库相关日志 -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.apache.commons.dbcp2" level="WARN"/>
    <logger name="java.sql" level="WARN"/>

    <!-- Jackson JSON处理日志 -->
    <logger name="com.fasterxml.jackson" level="WARN"/>

    <!-- 应用程序核心包日志 -->
    <logger name="com.im.qtech.data" level="DEBUG"/>

    <!-- 异步处理相关日志 -->
    <logger name="com.im.qtech.data.async" level="DEBUG"/>

    <!-- 数据库操作相关日志 -->
    <logger name="com.im.qtech.data.sink" level="DEBUG"/>

    <!-- Kafka相关日志 -->
    <logger name="com.im.qtech.data.source" level="INFO"/>

    <!-- 配置管理相关日志 -->
    <logger name="com.im.qtech.data.config" level="INFO"/>

    <!-- 增加更多详细的监控日志 -->
    <logger name="com.im.qtech.data.sink" level="DEBUG"/>
    <logger name="com.im.qtech.data.async" level="DEBUG"/>

    <!-- 增加性能监控相关配置 -->
    <logger name="org.apache.flink.runtime.taskmanager.Task" level="INFO"/>
    <logger name="org.apache.flink.runtime.executiongraph.ExecutionGraph" level="INFO"/>

    <!-- 根日志配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="DEBUG_FILE"/>
    </root>

    <!-- 性能监控配置 -->
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Marker>FLOW</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

</configuration>
